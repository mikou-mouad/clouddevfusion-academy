RewriteEngine On

# 1) API -> Symfony (backend)
RewriteRule ^api(/.*)?$ backend/public/index.php [QSA,L]

# 2) If request is a real file/dir in the document root, serve it
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# 3) Otherwise SPA fallback (Angular)
RewriteRule ^ index.html [L]
